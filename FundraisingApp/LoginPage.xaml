<Page x:Class="FundraisingApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FundraisingApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid Margin="30">
        <Border Background="#2D2D2D"   BorderThickness="50" HorizontalAlignment="Center" MaxHeight="400">
            <StackPanel Background="#2D2D2D" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30"   >
            <TextBlock Text="Logowanie" FontSize="20" Margin="5,0,0,20" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left" TextAlignment="Center"/>
            <Label Content="Nazwa użytkownika" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left"/>
            <TextBox Name="UsernameTextBox" Width="200" Height="25" FontFamily="Calibri" Margin="0,5,0,0" TextAlignment="Left" VerticalContentAlignment="Center"/>
            <Label Content="Hasło" Margin="0,10,0,0" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left"/>
             <PasswordBox Name="PasswordBox" Width="200" Height="25" FontFamily="Calibri" Margin="0,5,0,0"  VerticalContentAlignment="Center"/>
            <Button Content="Zaloguj" Width="100" Height="25" Margin="0,20,0,0" Click="LoginButton_Click" Background="#298359" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Right"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
