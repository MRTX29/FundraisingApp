<Page x:Class="FundraisingApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage"
      Background="#2D2D2D">

    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#3A3A3A" Padding="30" CornerRadius="5">
            <StackPanel Width="350" Height="280">
                <TextBlock Text="Logowanie"
                           Foreground="White"
                           FontSize="25"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center" />

                <Label Content="Nazwa użytkownika" Foreground="White" />
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />

                <Label Content="Hasło" Foreground="White" />
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" />

                <Button Content="Zaloguj"
                        Height="50" Width="120"
                        HorizontalAlignment="Center"
                        Background="#298359" Foreground="White"
                        Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
