<Page x:Class="FundraisingApp.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddUserPage"
      Background="#2D2D2D">

    <Grid Background="#2D2D2D">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Margin="0, 10, 0, 0"
                    Width="700">

            <TextBlock Text="Dodaj użytkownika"
                       FontSize="20" 
                       Margin="20,10,0,10" 
                       Foreground="White" />

            <Line X1="0" Y1="0" X2="700" Y2="0"
                  Stroke="White" StrokeThickness="2" 
                  Margin="0,0,0,10" />

            <Button Content="Powrót do głównego panelu" 
                    Width="200" Height="25"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Right"
                    Background="#298359" 
                    Foreground="White"
                    Click="NavigateToMainDashboard_Click" />

            <Border Background="#3A3A3A" CornerRadius="5" Padding="20">
                <StackPanel>
                    <Label Content="Nazwa użytkownika"
                           Foreground="White" 
                           Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox"
                             Width="200" Height="25" 
                             Margin="0,0,0,10"/>

                    <Label Content="Hasło"
                           Foreground="White" 
                           Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Width="200" Height="25"
                                 Margin="0,0,0,10"/>

                    <Label Content="Rola"
                           Foreground="White"
                           Margin="0,0,0,5"/>
                    <RadioButton x:Name="PersonCollectingMoney"
                                 GroupName="Roles" 
                                 Foreground="White"
                                 IsChecked="True"
                                 Margin="0,0,0,5">
                        Osoba kwestująca
                    </RadioButton>
                    <RadioButton x:Name="PersonCountingMoney"
                                 GroupName="Roles" 
                                 Foreground="White">
                        Osoba podliczająca
                    </RadioButton>

                    <Button Content="Dodaj"
                            Width="100" Height="25"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Right"
                            Background="#298359" 
                            Foreground="White"
                            Click="AddUserButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
