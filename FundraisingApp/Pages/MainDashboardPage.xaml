<Page x:Class="FundraisingApp.MainDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainDashboardPage"
      Background="#2D2D2D">

    <Grid>
        <StackPanel Margin="20" Background="#2D2D2D">
            <!-- ADMIN SECTION -->
            <StackPanel x:Name="AdminSection"
                        Visibility="Collapsed"
                        Margin="0,0,0,20">
                <Button Content="Dodaj użytkownika"
                        Width="180" Height="40"
                        Background="#298359"
                        Foreground="White"
                        FontSize="16"
                        Margin="0,0,0,20"
                        Click="OnAddUserClick"/>

                <TextBlock Text="Lista puszek"
                           Foreground="White"
                           FontSize="16" 
                           Margin="0,0,0,10" />
                <ItemsControl x:Name="AdminBoxesControl" ItemsSource="{Binding AdminBoxes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#444444" Padding="15" Margin="10" CornerRadius="8">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel Width="200">
                                        <TextBlock Text="{Binding Name}"
                                        Foreground="#FFFFFF"
                                        FontSize="16" 
                                        FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DateReturnedText}"
                                        Foreground="#AAAAAA"
                                        FontSize="14"
                                        Margin="0,5,0,10"/>
                                    </StackPanel>

                                    <Button Content="{Binding ButtonText}"
                                    IsEnabled="{Binding IsEnabled}"
                                    Width="140" Height="45" 
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Background="#32CD32" 
                                    Foreground="Black"
                                    BorderBrush="#298359"
                                    CommandParameter="{Binding Id}"
                                    Click="OnApproveBoxClick"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- COLLECTOR SECTION -->
            <StackPanel x:Name="CollectorSection"
                        Visibility="Collapsed"
                        Margin="0,0,0,20">
                <TextBlock Text="Dodaj nową puszkę"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,0,0,10"/>
                <Button Content="Dodaj puszkę"
                        Width="180" Height="40"
                        Background="#298359"
                        Foreground="White"
                        Click="OnAddBoxClick"/>
            </StackPanel>

            <!-- COUNTER SECTION -->
            <StackPanel x:Name="CounterSection"
                        Visibility="Collapsed"
                        Margin="0,0,0,20">
                <TextBlock Text="Podlicz puszki"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,0,0,10"/>
                <ItemsControl x:Name="CounterBoxesControl" ItemsSource="{Binding CounterBoxes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3A3A3A" Padding="10" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DateReturnedText}"
                                               Foreground="#CCC"/>

                                    <Button Content="Podlicz"
                                            Width="100" Height="30"
                                            Margin="0,10,0,0"
                                            Background="#298359"
                                            Foreground="White"
                                            CommandParameter="{Binding Id}"
                                            Click="OnCountBoxClick"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
