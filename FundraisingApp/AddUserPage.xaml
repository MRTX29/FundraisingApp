<Page x:Class="FundraisingApp.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FundraisingApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserPage" Background="White">

    <Grid>
        <StackPanel Background="#2D2D2D" HorizontalAlignment="Center" VerticalAlignment="Top" Height="440" Width="700" Margin="0, 10, 0, 0">
            <DockPanel>
                <StackPanel>
                    <TextBlock Text="Administrator" FontSize="20" Margin="20, 10, 0, 0" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left" TextAlignment="Left"/>
                    <Button Content="Wyloguj" Width="120" Height="25" Margin="20,0,0,0" Click="LogOutButton_Click" HorizontalContentAlignment="Left" Background="#2D2D2D" Foreground="#2471ff" FontFamily="Calibri" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0"/>
                </StackPanel>
                <Button Content="Przejdź do strony głównej" Width="160" Height="25" Margin="0,20,20,0" Click="NavigateToDashboard_Click" Background="#298359" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            </DockPanel>

            <Line  X1="0" Y1="0" X2="700" Y2="0" Stroke="White" StrokeThickness="2" VerticalAlignment="Stretch"></Line>

            <TextBlock Text="Dodaj użytkownika" FontSize="18" Foreground="White" Margin="20,10,0,10"/>
            
            <DockPanel Height="300" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel Background="#2D2D2D" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                    <Label Content="Nazwa użytkownika" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left"/>
                    <TextBox Name="UsernameTextBox" Width="200" Height="25" FontFamily="Calibri" Margin="0,5,0,0" TextAlignment="Left" VerticalContentAlignment="Center"/>
                    <Label Content="Hasło" Margin="0,5,0,0" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left"/>
                    <PasswordBox Name="PasswordBox" Width="200" Height="25" FontFamily="Calibri" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Content="Rola" Margin="0,5,0,0" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left"/>
                    <RadioButton IsChecked="True" x:Name="PersonCollectingMoney" GroupName="Roles" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left">Osoba kwestująca</RadioButton>
                    <RadioButton x:Name="PersonCountingMoney" GroupName="Roles" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left" Margin="0,5,0,0">Osoba podliczająca</RadioButton>
                    <Button Content="Dodaj" Width="100" Height="25" Margin="0,20,0,0" Click="AddUserButton_Click" Background="#298359" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Right"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
