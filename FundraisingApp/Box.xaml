<Page x:Class="FundraisingApp.Box"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FundraisingApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Box" Background="White">


    <Grid>
        <Border Background="White" BorderThickness="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel Background="#C5C8C4" Margin="30">
                <TextBlock Text="Puszka x" FontSize="24" Foreground="Gray" FontFamily="Calibri" HorizontalAlignment="Center"/>
                <TextBlock Text="Spis Banknotów" FontSize="20" Foreground="Black" FontFamily="Calibri" HorizontalAlignment="Center" Margin="0,20,0,20"/>
                <UniformGrid Rows="5" Columns="3" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość banknotów 500zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value500" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość banknotów 200zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value200" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość banknotów 100zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value100" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość banknotów 50zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value50" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość banknotów 20zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value20" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość banknotów 10zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value10" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 5zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value5" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 2zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value2" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 1zł" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value1" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 50gr" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value50gr" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 20gr" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value20gr" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 10gr" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value10gr" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 5gr" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value5gr" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 2gr" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value2gr" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10,15,15,15">
                        <Label Content="Ilość monet 1gr" FontFamily="Calibri" FontWeight="Bold"/>
                        <TextBox Name="value1gr" Width="120" Height="25" FontFamily="Calibri" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                    
                </UniformGrid>
                <StackPanel Margin="10,15,15,15" HorizontalAlignment="Center">
                    <Label Content="Inne waluty" FontFamily="Calibri" FontWeight="Bold" />
                    <TextBox Name="valueOtherCurrencies" Width="240" Height="25" FontFamily="Calibri"  VerticalContentAlignment="Center" TextAlignment="Center"/>
                </StackPanel>

                <TextBlock x:Name="valueTotalSum" Text="Suma: 0 zł" FontSize="20" Foreground="Black" FontFamily="Calibri" HorizontalAlignment="Left" Margin="30,0,0,0"/>
                <Button Content="Oblicz" Width="100" Height="30" Margin="0,20,20,20" Background="#298359" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Right" Click="OnObliczClicked"/>
            </StackPanel>

        </Border>
    </Grid>
</Page>
