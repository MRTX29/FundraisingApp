<Page x:Class="FundraisingApp.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FundraisingApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboardPage" Background="White">

    <Grid>
        <StackPanel Background="#2D2D2D" HorizontalAlignment="Center" VerticalAlignment="Top" Height="440" Width="700" Margin="0, 10, 0, 0">
            <DockPanel>
                <StackPanel>
                    <TextBlock Text="Administrator" FontSize="20" Margin="20, 10, 0, 0" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Left" TextAlignment="Left"/>
                    <Button Content="Wyloguj" Width="120" Height="25" Margin="20,0,0,0" Click="LogOutButton_Click" HorizontalContentAlignment="Left" Background="#2D2D2D" Foreground="#2471ff" FontFamily="Calibri" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0"/>
                </StackPanel>
                <Button Content="Dodaj użytkownika" Width="120" Height="25" Margin="0,20,20,0" Click="AddUser_Click" Background="#298359" Foreground="White" FontFamily="Calibri" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            </DockPanel>

            <Line  X1="0" Y1="0" X2="700" Y2="0" Stroke="White" StrokeThickness="2" VerticalAlignment="Stretch"></Line>

            <TextBlock Text="Lista puszek" FontSize="18" Foreground="White" Margin="20,10,0,10"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="CollectionBoxesControl" ItemsSource="{Binding CollectionBoxes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="10">
                                <StackPanel>
                                    <Border Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10" >
                                    <StackPanel  >
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,5"/>
                                        <TextBlock Text="Data oddania" FontSize="12" Foreground="#555"/>
                                        <TextBlock Text="{Binding Date}" FontSize="14" Foreground="#6C63FF"/>
                                    </StackPanel>
                                </Border>
                                <Button Content="{Binding ButtonText}" Width="150" Height="30" Margin="0,10,0,0" Click="ConfirmCollectionBox_Click"  HorizontalAlignment="Center" Background="{Binding ButtonColor}" Foreground="White" IsEnabled="{Binding IsEnabled}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
